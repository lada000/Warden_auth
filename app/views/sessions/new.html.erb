<div class="container">
  <h1>Login</h1>

  <% if flash[:alert] %>
    <div class="flash alert"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with url: session_path, local: true do |form| %>
    <div>
      <%= form.label :email %><br>
      <%= form.text_field :email, placeholder: "Enter your email" %>
    </div>

    <div>
      <%= form.label :password %><br>
      <%= form.password_field :password, placeholder: "Enter your password" %>
    </div>

    <div>
      <%= form.submit 'Login' %>
    </div>
  <% end %>

  <div class="links">
    <%= link_to 'Sign up', new_user_path %>
  </div>
</div>
